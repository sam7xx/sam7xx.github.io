// 可以动态变化的属性
:root
  --width-main: 1080px // 主内容区域宽度（默认1080px）
  --fsp: $fs-body // 段落字体大小（关联正文基础大小）
  --fsh2: 'calc(%s + 11px)' % var(--fsp) // h2标题大小（基于段落字体动态计算）
  --fsh3: 'calc(%s + 7px)' % var(--fsp) // h3标题大小（基于段落字体动态计算）
  --fsh4: 'calc(%s + 4px)' % var(--fsp) // h4标题大小（基于段落字体动态计算）
  
  --side-content-width: 255px // 侧边栏内容宽度（默认255px）
  --gap-margin: 11px // 元素外部间距（元素间距离）
  --gap-padding: 11px // 元素内部间距（内容到边框距离）
  
  --gap-p: 'calc(%s + 4px)' % $fs-body // 段落间距（正文大小+4px）
  --gap-p-compact: 'calc(%s * 0.75)' % $fs-body // 紧凑段落间距（正文大小*0.75）
  // desktop 2k or larger
  @media screen and (min-width: $device-2k) // 2K及以上屏幕响应式
    --width-main: 780px // 主内容宽度调整为780px
  // desktop 4k or larger
  @media screen and (min-width: $device-4k) // 4K及以上屏幕响应式
    --width-main: 860px // 主内容宽度调整为860px
  // iPad 竖屏
  @media screen and (max-width: $device-tablet) // 平板竖屏响应式
    --side-content-width: 255px // 侧边栏内容宽度调整为188px
  @media screen and (max-width: $device-mobile-max) // 手机屏幕响应式
    --side-content-width: 255px // 侧边栏内容宽度调整为224px

// 动态计算值
:root
  --gap-max: calc(var(--gap-margin) + var(--gap-padding)) // 最大间距（外部+内部间距之和）

