// AI Summary 样式
.ai-summary {
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  padding: 20px;
  margin: 20px 0;
  font-size: 14px;
  line-height: 1.6;
  
  .ai-summary-title {
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    
    &::before {
      content: "🤖";
      margin-right: 8px;
    }
  }
  
  .ai-summary-content {
    color: #495057;
    
    p {
      margin: 8px 0;
    }
  }
}

// 响应式设计
@media (max-width: 768px) {
  .ai-summary {
    padding: 15px;
    margin: 15px 0;
    
    .ai-summary-title {
      font-size: 16px;
    }
    
    .ai-summary-content {
      font-size: 14px;
    }
  }
}